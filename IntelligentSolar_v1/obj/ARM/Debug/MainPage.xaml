<Page
    x:Class="IntelligentSolar_v1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntelligentSolar_v1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
            <Ellipse x:ConnectionId='13' x:Name="LEDStatus" Fill="LightGray" Stroke="White" Width="30" Height="30" Margin="5"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="347,44,593,508">
            <TextBlock x:ConnectionId='7' x:Name="textBlock" TextWrapping="Wrap" Margin="10,0" Text="Roof °C"/>
            <TextBox x:ConnectionId='8' x:Name="TemperatureRoof" Text="-1" Margin="10" IsReadOnly="True"/>
            <TextBlock x:ConnectionId='9' x:Name="textBlock2" TextWrapping="Wrap" Margin="10,0" Text="Tank °C"/>
            <TextBox x:ConnectionId='10' x:Name="TemperatureTank" Text="-1" Margin="10" IsReadOnly="True"/>
            <TextBlock x:ConnectionId='11' x:Name="textBlock1" TextWrapping="Wrap" Margin="10,0" Text="Inlet °C"/>
            <TextBox x:ConnectionId='12' x:Name="TemperatureTankInlet" Text="-1" Margin="10" IsReadOnly="True"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="137,15,139,481">
            <TextBlock x:ConnectionId='1' x:Name="textBlock4" TextWrapping="Wrap" Margin="10,0" Text="Pumping"/>
            <TextBox x:ConnectionId='2' x:Name="Pumping" Text="No" Margin="10" IsReadOnly="True"/>
            <TextBlock x:ConnectionId='3' x:Name="textBlock5" TextWrapping="Wrap" Margin="10,0" Text="Heating"/>
            <TextBox x:ConnectionId='4' x:Name="Heating" Text="No" Margin="10" IsReadOnly="True"/>
            <TextBlock x:ConnectionId='5' x:Name="textBlock6" TextWrapping="Wrap" Margin="10,0" Text="GPIO"/>
            <TextBox x:ConnectionId='6' x:Name="GpioStatus" Text="???" Margin="10" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
    

</Page>

